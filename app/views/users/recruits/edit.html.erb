    <h5 style="border: 3px solid #ff9933;">投稿編集ページ</h5>

<div class="section">
  <div class="content">
  <%= form_for(@recruit, url: users_recruit_path) do |r| %>
    利用日<br>
    <%= r.date_select :offer_date,{
      prompt: {year: "year", month: "month", day: "day"},
      use_month_numbers: true,
      start_year: @now.year
    } %>
  </div>
</div>

<div class="section">
  <div class="content">
    時間指定<br>
    <%= r.time_select :start_time, {:minute_step => 30} %>-<%= r.time_select :finish_time, {:minute_step => 30} %>
  </div>
</div>

<div class="section">
  <div class="content">
    場所<br>
    <%= @user.prefecture %>
  </div>
</div>

<div class="section">
  <div class="content">
    備考<br>
    <%= r.text_area :text %>
  </div>
</div>

<div class="section">
  <div class="content">
    パートナー<br>
    <% @partners.each do |p|%>
      <%= r.radio_button :partner_id, p.id %>
      <%= r.label :partner_id, p.name, {value: p.id, style: "display: inline-block;"} %>
    <% end %>
  </div>
</div>
