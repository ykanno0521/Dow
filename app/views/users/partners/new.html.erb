<div class="container">
  <div class="row">
    <div>
      <h1>パートナー新規登録</h1>
    </div>
      <%= form_for @partner, url: users_partners_path, html: { method: :post } do |f| %>
      <div class="col-md-4">
        <div class="field">
            <div class="user-edit-image">
                <%= attachment_image_tag @partner, :image_id, :fill, 250, 250, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",  size: '250x250' %>
            </div>
        </div>
      </div>
        <div class="col-md-8">
          <div class="field">
            <%= f.label :"パートナー名" %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :"犬種　　　　" %>
            <%= f.select :dog_breed, @dog_breed, :prompt => "選択してください "%>
          </div>
          <div class="field">
            <%= f.label :"生年月日　　" %>
            <%= f.date_select :birthday, start_year: 1900, end_year: Time.now.year, use_month_numbers: true %>
          </div>
          <div class="field">
            <%= f.label :"性別　　　　" %>
            <%= f.radio_button :gender, "オス" %>
            <%= f.label :gender, "♂", {value: :オス, style: "display: inline-block;"} %>
            <%= f.radio_button :gender, "メス" %>
            <%= f.label :gender, "♀", {value: :メス, style: "display: inline-block;"} %>
          </div>
          <div class="field">
            <%= f.label :"体重　　　　" %>
            <%= f.number_field :weight, min: "1", step: "0.5" %>
          </div>
          <div class="field">
            <%= f.label :"性格　　　　" %>
              <%= f.radio_button :character, "活発" %>
              <%= f.label :character, "活発", {value: :活発, style: "display: inline-block;"} %>
              <%= f.radio_button :character, "おとなしい" %>
              <%= f.label :character, "おとなしい", {value: :おとなしい, style: "display: inline-block;"} %>
          </div>
          <%= f.submit '登録', class:"btn btn-primary", :style=>"background-color: green; color: ; width: 100px; height: 50px; "%>
        </div>
      <% end %>
  </div>
</div>