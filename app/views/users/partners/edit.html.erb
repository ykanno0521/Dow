<div class="container">
  <div class="row">
  <h1>編集画面</h1>
  <%= form_for(@partner, url:"/users/partners/#{@partner.id}") do |p| %>
    <div class="col-md-4">
      <div class="field">
          <div class="user-edit-image">
              <%= attachment_image_tag @partner, :image_id, :fill, 250, 250, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg",  size: '250x250' %>
              <%= p.attachment_field :image, placeholder: "プロフィール画像" %>
          </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="field">
        <%= p.label :"パートナー名" %>
        <%= p.text_field :name %>
      </div>
      <div class="field">
        <%= p.label :"犬種　　　　" %>
        <%= p.select :dog_breed, @dog_breed %>
      </div>
      <div class="field">
        <%= p.label :"生年月日　　" %>
        <%= p.date_select :birthday, start_year: 1900, end_year: Time.now.year, use_month_numbers: true %>
      </div>
      <div class="field">
        <%= p.label :"性別　　　　" %>
        <%= p.radio_button :gender, "オス" %>
        <%= p.label :gender, "♂", {value: :オス, style: "display: inline-block;"} %>
        <%= p.radio_button :gender, "メス" %>
        <%= p.label :gender, "♀", {value: :メス, style: "display: inline-block;"} %>
      </div>
      <div class="field">
        <%= p.label :"体重　　　　" %>
        <%= p.number_field :weight, min: "1", step: "0.5" %>Kg
      </div>
      <div class="field">
        <%= p.label :"性格　　　　" %>
          <%= p.radio_button :character, "活発" %>
          <%= p.label :character, "活発", {value: :活発, style: "display: inline-block;"} %>
          <%= p.radio_button :character, "おとなしい" %>
          <%= p.label :character, "おとなしい", {value: :おとなしい, style: "display: inline-block;"} %>
      </div>
      <%= p.submit '編集', class:"btn btn-primary", :style=>"background-color: green; color: ; width: 100px; height: 50px; "%>
      </div>
    <% end %>
  </div>
</div>