<% if @recruit.status_before_type_cast ==  0 %>
  $('#status2').text('募集中');
  $('#status2').css({"font-size": "40px", "color": "black", "background-color": "white"});
  $('#status2').attr("id", "status1");
<% else %>
  $('#status1').text('募集済み');
  $('#status1').css({"font-size": "40px", "color": "white", "background-color": "red"});
  $('#status1').attr("id", "status2");
<% end %>